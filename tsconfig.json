{
  "compilerOptions": {
    "allowJs": false,
    "typeRoots": ["./node_modules/@types"],
    "types": ["mocha"],
    "esModuleInterop": true,
    "sourceMap": true,
    "importHelpers": false,
    "strict": true,
    "declaration": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "module": "NodeNext",
    "target": "ES5"
  },
  "include": ["./src/**/*", "./test/**/*"],
  "exclude": ["./dist"]
}
