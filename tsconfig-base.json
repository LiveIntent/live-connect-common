{
  "compilerOptions": {
    "allowJs": false,
    "typeRoots": ["./node_modules/@types"],
    "types": ["mocha"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "node"
  },
  "include": ["./src/**/*", "./test/**/*"],
  "exclude": ["./dist"]
}
